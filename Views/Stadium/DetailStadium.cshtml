@model SoccerManageApp.Dtos.StadiumDetail
@{
    ViewData["Title"]="Detail Stadium";
}
<table border="2" cellpadding="30">
        <thead>
            <th>Stadium Name</th>
            <th>Home Team</th>
            <th>City</th>
            <th>Capacity</th>
        </thead>
        <tbody>
           
            <tr>
                <td><h4>@Model.StadiumName</h4></td>
                <td>@Model.HomeTeam
                    <img src="~/Image/@Model.TeamImage">
                </td>
                <td>@Model.City</td>
                <td>@Model.Capacity</td>
                
            </tr>
          
        </tbody>
    </table>
    <a asp-action="ListTeams" asp-controller="Team">Back To Teams</a>
