@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> _signInManage;
@model SoccerManageApp.Dtos.CreateTeamView

<h3>Register a team for league</h3>
<form method="POST">
    <div class="form-group">
        <label asp-for="@Model.TeamName"></label>
        <input type="text" asp-for="@Model.TeamName"/>
        <span asp-validation-for="@Model.TeamName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.TeamImage"></label>
        <input type="text" asp-for="@Model.TeamImage"/>
        <span asp-validation-for="@Model.TeamImage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="@Model.Creator" value="@User.Identity.Name"/>
        <span asp-validation-for="@Model.TeamImage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.StadiumID"></label>
        <input type="number" readonly asp-for="@Model.StadiumID" value="@ViewBag.stdId"/>
        <span asp-validation-for="@Model.StadiumID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Create</button>
        <a href="/Home/Index" class="btn btn-primary">Back</a>
    </div>
</form>