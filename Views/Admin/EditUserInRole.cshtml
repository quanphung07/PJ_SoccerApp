@model List<SoccerManageApp.Models.Admin.UserInRoleModel>

<form method="POST">
    <div class="card">
        <div class="card-header"></div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div>
                    <div>
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].Username" />
                        <input type="checkbox" asp-for="@Model[i].IsSelected" />
                        <label asp-for="@Model[i].IsSelected">@Model[i].Username</label>
                    </div>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="/Admin/ListRoles" class="btn btn-danger">Cancel</a>
        </div>
    </div>

</form>
