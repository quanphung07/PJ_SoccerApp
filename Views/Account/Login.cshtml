@model SoccerManageApp.Models.Account.LoginModel

<div class="login">
    <div id="title">Login</div>
    <form method="POST">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Username"> </label>
        <input type="text" class="form-controll" asp-for="Username">
        <div> <span asp-validation-for="Username" class="text-danger"></span>
</div>
    </div>
     <div class="form-group">
        <label asp-for="Password"> </label>
        <input type="text" class="form-controll" asp-for="Password">
        <div> <span asp-validation-for="Password" class="text-danger"></span>
</div>
    </div>
    <div id="remember" class="form-group">
        <input type="checkbox" asp-for="RememberMe">
        <label asp-for="RememberMe"> </label>
    </div>
    <div class="form-group">
        <button type="submit">Login</button>
        <a href="/Account/Register" >Register</a>
    </div>
</form>
</div>